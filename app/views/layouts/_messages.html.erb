    <div class="container">
      <% flash.each do |name, msg| %>
        <div class="alert 
                <% if (name == "notice") %> alert-success
                <% else %>
                  alert-danger
                <% end %>
                alert-dismissible fade show" role="alert">
          <%= msg %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        
      <% end %>
    </div>
<h1 class="text-center mt-4">Login</h1>


 <div class="container">

  <div class="row justify-content-center">
      <div class="col-10 justify-content-center" >
          <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-success rounded") do |form| %>

              <div class="form-group row">
                  
                    <%= form.label :email, class: "col-2 col-form-label text-light "  %>
                    <div class="col-10">
                      <%= form.email_field :email, rows: 10, class: "form-control shadow rounded", placeholder: "Email" %>
                    </div>
              </div>

              <div class="form-group row">
                  
                    <%= form.label :password, class: "col-2 col-form-label text-light "  %>
                    <div class="col-10">
                      <%= form.password_field :password, rows: 10, class: "form-control shadow rounded", placeholder: "Enter Password" %>
                    </div>
              </div>

              <div class="form-group row  justify-content-center">
                <%= form.submit "Log in", class: "btn btn-outline-light btn-lg justify-content-center" %>
              </div>

          <% end %>
          <div class="mb-3">
              <%= link_to 'Back', articles_path, class: "text-success" %>
          </div>
      </div>
      
  </div>
 
</div>
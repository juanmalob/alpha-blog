
<%= render 'shared/errors', obj: @category %>
<%= form_with(model: @category, class: "shadow p-3 mb-3 bg-success rounded") do |form| %>

    <div class="form-group row">
      
        <%= form.label :name, "Category Name", class: "col-2 col-form-label  text-light " %>
        <div class="col-10">
          <%= form.text_field :name , class: "form-control shadow rounded", placeholder: "Name" %>
        </div>

    </div>


    <div class="form-group row  justify-content-center">
      <%= form.submit class: "btn btn-outline-light btn-lg justify-content-center" %>
    </div>

<% end %>

      
 <div class="container">

  <div class="row justify-content-center">
      <div class="col-10 justify-content-center" >
          <%= render 'shared/errors', obj: @article %>
          <%= form_with(model: article, class: "shadow p-3 mb-3 bg-success rounded") do |form| %>

              <div class="form-group row">
                
                  <%= form.label :title, class: "col-2 col-form-label  text-light " %>
                  <div class="col-10">
                    <%= form.text_field :title , class: "form-control shadow rounded", placeholder: "Title of article" %>
                  </div>
          
              </div>


              <div class="form-group row mt-2">
                  
                    <%= form.label :description, class: "col-2 col-form-label text-light "  %>
                    <div class="col-10">
                      <%= form.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
                    </div>
              </div>

              <div class="form-group row mt-2">
                  
                    <%= form.label :category, class: "col-2 col-form-label text-light "  %>
                    <div class="col-10">
                        <%= form.collection_select(:category_ids, Category.all, :id, :name, 
                          { prompt: "Make your selection from the list below" }, { multiple: true, size: 5, class: "form-select shadow rounded" }) %>
                    </div>
              </div>

              <div class="form-group row  justify-content-center mt-2">
                <%= form.submit class: "btn btn-outline-light btn-lg justify-content-center" %>
              </div>

          <% end %>
          <div class="mb-3">
              <%= link_to 'Back', articles_path, class: "text-success" %>
          </div>
      </div>
      
  </div>
 
</div>